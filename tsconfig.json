{
  // this is the typescript configs we're using
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // strict mode is good when you're migrating an app to typescript
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    // doing this so my api service can get included bc types are hard :(
  }
}